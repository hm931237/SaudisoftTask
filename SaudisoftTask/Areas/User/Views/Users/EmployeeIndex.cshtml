
@{
    ViewBag.Title = "EmployeeIndex";
}

<br />
<div class="row">
    <div class="col-lg-4">
        <label>Comment</label>
        <div>
            <input type="text" id="Comment" placeholder="Comment" class="form-control" />
        </div>
    </div>
</div><br />
<div class="row">
    <div class="col-lg-4">
        <button id="Checkin" class="btn btn-default">Check in</button>
    </div>

    <div class="col-lg-4">
        
        <button id="CheckOut" class="btn btn-default">Check Out</button>
    </div>
</div>
@section Scripts {
    <script>
        $("#Checkin").click(function () {
            toastr.remove();
            var Id = @Session["UserId"];
            var Comment=$("#Comment").val();
            $.ajax({
                url: '/Users/CheckIn',
                data: { UserId: Id,CheckinComment: Comment},
                method: "POST",
                success: function () {
                    toastr.success("Check In done successfully");
                },
                error: function () {
                    toastr.error("Check In failed");
                }
            });
        });
    </script>

<script>
    $("#CheckOut").click(function () {
        toastr.remove();
        var Id = @Session["UserId"];
        var Comment=$("#Comment").val();
            $.ajax({
                url: '/Users/CheckOut',
                data: { UserId: Id,CheckoutComment: Comment },
                method: "POST",
                success: function () {
                    toastr.success("Check Out done successfully");
                },
                error: function () {
                    toastr.error("Check Out failed");
                }
            });
        });
</script>
    }
