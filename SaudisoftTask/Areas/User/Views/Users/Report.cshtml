@model SaudisoftTask.ViewModels.ReportVM

@{
    ViewBag.Title = "Report";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Report.DateFrom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Report.DateFrom, new { htmlAttributes = new { @class = "form-control", placeholder = "UserName" } })
                @Html.ValidationMessageFor(model => model.Report.DateFrom, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Report.DateTo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Report.DateTo, new { htmlAttributes = new { @class = "form-control", placeholder = "UserName" } })
                @Html.ValidationMessageFor(model => model.Report.DateTo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}
        @if (Model.Reports != null)
        {
            <table class="table">
                <tr>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(m => m.Report.Name)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Report.Del)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Report._Attendance)
                    </th>
                </tr>

                @foreach (var item in Model.Reports)
                {
                    <tr>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Del)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item._Attendance)
                        </td>
                    </tr>
                }

            </table>

        }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}