@model SaudisoftTask.ViewModels.ReportVM

@{
    ViewBag.Title = "Report";
}
<link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet" />
<link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.css" rel="stylesheet" />

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
<br />
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Report.DateFrom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="input-group date" id="DateFrom">
                    @Html.EditorFor(model => model.Report.DateFrom, new { htmlAttributes = new { @class = "form-control", placeholder = "From Date"} })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                    @Html.ValidationMessageFor(model => model.Report.DateFrom, "", new { @class = "text-danger" })
                </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Report.DateTo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="input-group date" id="DateTo">
                    @Html.EditorFor(model => model.Report.DateTo, new { htmlAttributes = new { @class = "form-control", placeholder = "To Date"} })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                     @Html.ValidationMessageFor(model => model.Report.DateTo, "", new { @class = "text-danger" })
                </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}
        @if (Model.Reports != null)
        {
            <table class="table">
                <tr>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(m => m.Report.Name)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Report.Del)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Report.Attendance)
                    </th>
                </tr>

                @foreach (var item in Model.Reports)
                {
                    <tr>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Del)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Attendance)
                        </td>
                    </tr>
                }

            </table>
            <br />
        }
        <div class="row">
            <div class="col-sm-3">
                @Html.ActionLink("Home", "Index")
            </div>
            @if (Model.Reports != null)
            {
                <div class="col-sm-1">
                    @Html.ActionLink("Export Pdf", "ExportReport")
                </div>
            }
        </div>

<script>
    $('#DateFrom').datetimepicker({
        defaultDate: 'now',
        ignoreReadonly: true,
        format: 'L'
    });
</script>
<script>
    $('#DateTo').datetimepicker({
        defaultDate: 'now',
        ignoreReadonly: true,
        format: 'L'
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
